@model TaskTracker.ViewModels.TaskItemViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2 class="container text-center">Edit</h2>

<h4 class="container text-center">TaskTrackerViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-action="Edit" method="post">
        <div>@Html.ValidationSummary(false, "", new { @class = "text-danger" })</div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label">Task Name:</label>
                <div>@Html.EditorFor(n => n.TaskName)</div>
            </div>
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label">Task label:</label>
                <div> @Html.EditorFor(n => n.TaskDescription)</div>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedTaskTime" class="control-label">Estimated time (hours):</label>
                <div>@Html.EditorFor(n => n.EstimatedTaskTime)</div>
            </div>
            <div class="form-group">
                <label asp-for="DateStarted" class="control-label">Date started:</label>
                <div>@Html.EditorFor(n => n.DateStarted)</div>
            </div>
            <div class="form-group">
                <label asp-for="DateFinished" class="control-label">Date Finished:</label>
                <div>@Html.EditorFor(n => n.DateFinished)</div>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label">Comment:</label>
                <div>@Html.EditorFor(n => n.Comment)</div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


<div class="container">
    @Html.ActionLink("Home", "Index", new { })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
