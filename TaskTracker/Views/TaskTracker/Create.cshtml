@model TaskTracker.ViewModels.TaskItemViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>TaskItemViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4 card bg-faded">
        <div>@Html.ValidationSummary(false, "", new { @class = "text-danger" })</div>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label">Task Name</label>
                <input asp-for="TaskName" class="form-control" name="TaskName" />
            </div>
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label">Task Description</label>
                <input asp-for="TaskDescription" class="form-control" name="TaskDescription" />
            </div>
            <div class="form-group">
                <label asp-for="EstimatedTaskTime" class="control-label">Estimated Task Time</label>
                <input asp-for="EstimatedTaskTime" class="form-control" name="EstimatedTaskTime" />
            </div>
            <div class="form-group">
                <label asp-for="DateStarted" class="control-label">Date Started</label>
                <input asp-for="DateStarted" class="form-control" name="DateStarted" type="datetime-local" />
            </div>
            <div class="form-group">
                <label asp-for="DateFinished" class="control-label">Date Finished</label>
                <input asp-for="DateFinished" class="form-control" name="DateFinish" type="datetime-local" />
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label">Comment</label>
                <input asp-for="Comment" class="form-control" name="Comment" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Home", "Index", new { })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
